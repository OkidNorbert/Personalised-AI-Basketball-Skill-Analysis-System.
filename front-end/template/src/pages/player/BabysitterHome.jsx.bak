import React, { useState, useEffect } from 'react';
import { Link } from 'react-router-dom';
import axios from 'axios';

const BabysitterHome = () => {
  const [children, setChildren] = useState([]);
  const [activities, setActivities] = useState([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState('');

  useEffect(() => {
    fetchData();
  }, []);

  const fetchData = async () => {
    try {
      const token = localStorage.getItem('token');
      
      // Fetch assigned children
      const childrenResponse = await axios.get('http://localhost:3000/api/babysitter/children', {
        headers: { Authorization: `Bearer ${token}` }
      });
      setChildren(childrenResponse.data);
      
      // Fetch recent activities
      const activitiesResponse = await axios.get('http://localhost:3000/api/babysitter/activities', {
        headers: { Authorization: `Bearer ${token}` }
      });
      setActivities(activitiesResponse.data);
      
      setLoading(false);
    } catch (err) {
      setError('Failed to fetch data');
      setLoading(false);
    }
  };

  if (loading) return <div className="text-center py-8">Loading...</div>;
  if (error) return <div className="text-red-600 text-center py-8">{error}</div>;

  return (
    <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <h1 className="text-3xl font-bold mb-8">Welcome to Your Babysitter Dashboard</h1>
      
      {/* Assigned Children Overview */}
      <div className="bg-white shadow rounded-lg p-6 mb-8">
        <div className="flex justify-between items-center mb-4">
          <h2 className="text-xl font-bold">Your Assigned Children</h2>
          <Link 
            to="/children" 
            className="text-blue-600 hover:text-blue-800"
          >
            View all children →
          </Link>
        </div>
        
        {children.length > 0 ? (
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            {children.map((child) => (
              <div key={child._id} className="border rounded-lg p-4">
                <h3 className="font-semibold text-lg">{child.firstName} {child.lastName}</h3>
                <p className="text-gray-600">Age: {child.age}</p>
                <p className="text-gray-600">Parent: {child.parent?.name || 'Not assigned'}</p>
                <Link 
                  to={`/children/${child._id}`} 
                  className="text-blue-600 hover:text-blue-800 text-sm"
                >
                  View details →
                </Link>
              </div>
            ))}
          </div>
        ) : (
          <div className="text-center py-4">
            <p className="text-gray-500">You don't have any children assigned yet.</p>
          </div>
        )}
      </div>
      
      {/* Recent Activities */}
      <div className="bg-white shadow rounded-lg p-6 mb-8">
        <div className="flex justify-between items-center mb-4">
          <h2 className="text-xl font-bold">Recent Activities</h2>
          <Link 
            to="/activities" 
            className="text-blue-600 hover:text-blue-800"
          >
            View all activities →
          </Link>
        </div>
        
        {activities.length > 0 ? (
          <div className="overflow-x-auto">
            <table className="min-w-full divide-y divide-gray-200">
              <thead className="bg-gray-50">
                <tr>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Date
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Child
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Activity
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Status
                  </th>
                </tr>
              </thead>
              <tbody className="bg-white divide-y divide-gray-200">
                {activities.slice(0, 5).map((activity) => (
                  <tr key={activity._id}>
                    <td className="px-6 py-4 whitespace-nowrap">
                      {new Date(activity.date).toLocaleDateString()}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      {activity.child?.firstName} {activity.child?.lastName}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      {activity.description}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      <span className={`px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${
                        activity.status === 'completed' ? 'bg-green-100 text-green-800' : 
                        activity.status === 'in-progress' ? 'bg-yellow-100 text-yellow-800' : 
                        'bg-red-100 text-red-800'
                      }`}>
                        {activity.status}
                      </span>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : (
          <p className="text-gray-500 text-center py-4">No recent activities available.</p>
        )}
      </div>
      
      {/* Quick Actions */}
      <div className="bg-white shadow rounded-lg p-6">
        <h2 className="text-xl font-bold mb-4">Quick Actions</h2>
        <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
          <Link 
            to="/activities/new" 
            className="bg-blue-600 text-white px-4 py-2 rounded-md text-center hover:bg-blue-700"
          >
            Log New Activity
          </Link>
          <Link 
            to="/attendance" 
            className="bg-blue-600 text-white px-4 py-2 rounded-md text-center hover:bg-blue-700"
          >
            Mark Attendance
          </Link>
          <Link 
            to="/profile" 
            className="bg-blue-600 text-white px-4 py-2 rounded-md text-center hover:bg-blue-700"
          >
            Update Profile
          </Link>
        </div>
      </div>
    </div>
  );
};

export default BabysitterHome; 